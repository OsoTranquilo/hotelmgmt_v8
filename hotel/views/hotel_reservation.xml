<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

         <!--=== Hotel Reservation ==== -->
        <!-- Form view of hotel reservation -->
       <record model="ir.ui.view" id="view_hotel_reservation_form">
            <field name="name">hotel.reservation.form</field>
            <field name="model">hotel.reservation</field>
            <field name="arch" type="xml">
                <form string="Reservation" >
                    <header>
                        <!--<button name="send_reservation_mail" type="object" string="Send Reservation Email" states="confirm" class="oe_highlight"/>-->
                        <button name="confirm" string="Confirm" states="draft" class="oe_highlight"/>
                        <button name="cancel" string="Cancel Reservation" states="draft,confirm" class="oe_highlight"/>
                        <button name="draft" string="Set to Draft" states="cancel" class="oe_highlight"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <label string="Reservation No"/>
                        <h1>
                            <field name="reservation_no" class="oe_inline"/>
                        </h1>
                        <group>
                            <group>
                                <field name="virtual_room_id"/>
                                <field name="room_type_id"/>
                                <field name="product_uom_qty"
                                    context="{'partner_id':parent.partner_id,'quantity':product_uom_qty,'pricelist':parent.pricelist_id,'uom':product_uom}"
                                    invisible="1" />
                                <field name="product_id"
                                    context="{'partner_id':parent.partner_id,'quantity':product_uom_qty,'pricelist':parent.pricelist_id,'uom':product_uom}"
                                    select="1" domain="[('isroom','=',True)]"
                                    string="Room No" />
                                <field name="product_uom" string="Rent(UOM)" />
                            </group>
                            <separator/>
                            <group colspan="4" col="4">
                                <field name="adults"/>
                                <field name="children"/>
                                <field name="checkin"/>
                                <field name="checkout"/>
                                <field name="reservation_lines" colspan="4" nolabel= "1">
                                    <tree create="false" delete="false" editable="bottom">
                                        <field name="date" readonly="True" />
                                        <field name="price" />
                                    </tree>
                                </field>
                            </group>
                            <group>
                                <field name="price_unit"/>
                                <field name="invoice_status" />
                                <field name="pricelist_id" invisible="1"/>
                            </group>
                            <notebook colspan="4">
                                <page string="Services">
                                    <separator string="Related services" colspan="4" />
                                    <field name="service_line_ids" colspan="4" string="Service Line"
                                    nolabel="1" context="{'partner_id':parent.partner_id,'quantity':product_uom_qty,'pricelist':parent.pricelist_id,'uom':product_uom}">
                                    <tree string="Service Line">
                                        <field name="name" />
                                        <field name="ser_room_line" />
                                        <field name="product_id" />
                                        <field name="product_uom_qty" />
                                        <field name="price_unit" />
                                        <field name="price_subtotal" />
                                        <field name="state" />
                                    </tree>
                                </field>
                                </page>
                            </notebook>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Tree view of hotel reservation -->
        <record model="ir.ui.view" id="view_hotel_reservation_tree">
            <field name="name">hotel.reservation.tree</field>
            <field name="model">hotel.reservation</field>
            <field name="arch" type="xml">
                <tree string="Hotel Reservation" colors="red:state == 'cancelled';">
                    <field name="product_id"/>
                    <field name="checkin"/>
                    <field name="checkout"/>
                    <field name="adults"/>
                    <field name="children"/>
                    <field name="state" />
                    <field name="to_assign" invisible="True" />
                </tree>
            </field>
        </record>

    </data>
</openerp>
